{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"] // resolve all modules prefixed with `@/` from `src` directory
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es5",
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
